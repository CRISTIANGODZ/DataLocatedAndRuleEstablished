    <!--void addEntityLabelCategory(EntityLabelCategory entityLabelCategory);-->
    <insert id="addEntityLabelCategory" useGeneratedKeys="true" keyProperty="labelCategoryId">
        insert into entity_label_category (template_id, title, color, border_color)
        values (#{templateId}, #{title}, #{color}, #{borderColor})
    </insert>

    <!--List<EntityLabelCategory> getEntityLabelCategoryByTemplateId(@Param("templateId") Long templateId);-->
    <select id="getEntityLabelCategoryByTemplateId" resultType="EntityLabelCategory">
        select *
        from entity_label_category
        where template_id = #{templateId}
    </select>

    <!--void deleteEntityLabelCategoryByTemplateId(@Param("templateId") Long templateId);-->
    <delete id="deleteEntityLabelCategoryByTemplateId">
        delete from entity_label_category
        where template_id = #{templateId}
    </delete>

